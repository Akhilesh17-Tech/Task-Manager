<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="./css/todo.css">
</head>

<body>

    <div class="main-container">
        <div class="header">
            <h1>TODO App</h1>
        </div>
        <form action="/create-task" method="post">
            <div class="box-container1">
                <div class="lablebox">
                    <label for="">DESCRIPTION</label>
                </div>
                <div class="input-box">
                    <input type="text" required name="tasks" placeholder="What do you need to do?">
                </div>
            </div>
            <div class="box-container2">
                <div class="dropdownbox">
                    <div class="lablebox">
                        <label for="">CATEGORY</label>
                    </div>
                    <div class="drop-down">
                        <select name="options" id="category" required>
                            <option value="" selected disabled>Choose a catrgory</option>
                            <option value="Personal">Personal</option>
                            <option value="School">School</option>
                            <option value="Office">Office</option>
                            <option value="shopping">College</option>
                        </select>
                    </div>
                </div>
                <div class="dateBox">
                    <div class="lablebox">
                        <label for="">DUE DATE</label>
                    </div>
                    <div class="datebox">
                        <input type="date" required name="dates" id="">
                    </div>
                </div>

                <div class="btn-box">
                    <button type="submit"><i class="fas fa-plus"></i> ADD TASK</button>
                </div>
            </div>
        </form>

        <form action="/delete" method="get">
            <% for (let i of todoList) {%>
            <div class="box-container3" id="todoTaskList">
                <div class="check">
                    <input type="checkbox" class="custom-checkbox" name="<%= i._id %>">
                </div>
                <div class="taskbox">
                    <div class="taskText">
                        <label for=""><%= i.task %></label>
                    </div>
                    <div class="taskDate">
                        <p><i class="fal fa-calendar-alt"></i><%= i.date %></p>
                    </div>
                </div>
                <div class="categ">
                    <p id="catg"><%= i.categ %></p>
                </div>
            </div>
            <%}%>
              <div class="del-btn">
               <button type="submit" value="DELETE TASK"><i class="fas fa-trash-alt"></i> DELETE TASK</button>
              </div>
        </form>
    </div>
    <!-- <script src="/js/todo.js"></script> -->
    <script src="/js/todo.js"></script>
</body>

</html>